Процедура ОткрытьРабочуюПанельТелефонии() Экспорт
	
	ИмяПараметра = "Телефония.РабочаяПанельТелефонии";
	Если ПараметрыПриложения[ИмяПараметра] = Неопределено Тогда
		ИмяФормы = "Обработка.Телефония.Форма.РабочаяПанельТелефонии";
		ПараметрыПриложения.Вставить(ИмяПараметра, ПолучитьФорму(ИмяФормы, , , глТелефония["ИдентификаторФормыТелефонии"], ));  
	КонецЕсли;
	Форма = ПараметрыПриложения[ИмяПараметра];
	Если НЕ Форма = Неопределено Тогда
		Если Форма.Открыта() Тогда
			Форма.Активизировать();
		Иначе
			Форма.Открыть();
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

