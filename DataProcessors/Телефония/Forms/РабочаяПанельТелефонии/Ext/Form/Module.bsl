		Возврат Формат(Цел(Значение/(60*60)), "ЧЦ=2; ЧН=00; ЧВН=") + ":" 
				+ Формат(Цел((Значение - (Цел(Значение/(60*60))*60*60))/60), "ЧЦ=2; ЧН=00; ЧВН=") + ":" 
				+ Формат(Значение-Цел(Значение/60)*60, "ЧЦ=2; ЧН=00; ЧВН=");
